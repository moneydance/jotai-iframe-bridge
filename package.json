{
  "name": "jotai-iframe-bridge-workspace",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Monorepo for Jotai iframe bridge packages",
  "scripts": {
    "scripts": "pnpm exec tsx scripts/script-runner.ts",
    "dev": "pnpm exec tsx scripts/dev-runner.ts",
    "dev:servers": "pnpm exec tsx scripts/dev-runner.ts --include-tags dev",
    "dev:tests": "pnpm exec tsx scripts/dev-runner.ts --include-tags test",
    "build": "pnpm -r build",
    "type-check": "pnpm -r type-check",
    "test": "pnpm -r test",
    "test:run": "pnpm -r test:run",
    "test:watch": "pnpm -r test:watch",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "clean": "pnpm -r clean"
  },
  "keywords": [
    "jotai",
    "iframe",
    "bridge",
    "state-management",
    "typescript",
    "react",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@types/node": "^22.16.4",
    "@types/react": "^18.3.3",
    "react": "^18.3.1",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.13.1"
}
