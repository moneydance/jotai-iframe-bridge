{
  "name": "jotai-iframe-bridge",
  "version": "0.1.0",
  "description": "A robust iframe communication bridge with type-safe API",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:run": "vitest --run"
  },
  "keywords": [
    "iframe",
    "postmessage",
    "communication",
    "bridge",
    "typescript",
    "jotai",
    "reactive"
